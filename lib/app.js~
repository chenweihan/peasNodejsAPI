/**
 * 模块依赖
 */
var http = require('http'),
    config = require(global.ENV.baseDir+'/config.js'),
    exception = require(global.ENV.libDir+'exception.js').exception,
    log = require(global.ENV.libDir + 'log.js').log,
    router = require(global.ENV.libDir+'router.js');

/**
 * Application prototype clear module
 */
var app = exports = module.exports = {};

    /**
     * 初始化
     */
    app.init = function() {
        app.listen();
    };

    /**
     * 区域配置
     */ 
    app.locals = {};
    
    /**
     * 创建服务监听请求
     */  
    app.listen = function(){
        http.createServer(function (req, res) { 
            try {
              app.handleRequest(req,res);
            } catch (e) {
              log(e.toString(),'error',res); 
              if (global.ENV.debugConsole) {
                  console.log('控制台输出:',e.toString());
              }
            }
        }).listen(1337, '127.0.0.1');
        console.log('Server running at http://127.0.0.1:1337/');
    };
   
    /**
     * 配置文件
     */
    app.defaultConfig = function() {
        app.locals = config; 
    };

    /**
     * 设置配置
     */
    app.set = function(setting, val){
        this.locals[setting] = val;  
        return this;
    };
    
    /**
     * 获取配置
     */
    app.get = function(key) { 
        return this.locals[key];     
    };

    /**
     * 路由解析 
     */ 
    app.handleRequest = function(req,res) {
        //console.log('router');
        router.init(req,res);
    };


